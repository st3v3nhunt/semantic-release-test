{
  "name": "semantic-release-test",
  "version": "1.0.0",
  "description": "Test for semantic-release",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/st3v3nhunt/semantic-release-test.git"
  },
  "author": "st3v3nhunt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/st3v3nhunt/semantic-release-test/issues"
  },
  "homepage": "https://github.com/st3v3nhunt/semantic-release-test#readme",
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "^1.0.0",
    "@semantic-release/git": "^9.0.0",
    "semantic-release": "^17.0.8"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": ["package.json"],
              "from": "\"version\": \".*\"",
              "to": "\"version\": \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "package.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): update version in package.json from ${lastRelease.version} to ${nextRelease.version} [skip ci]"
        }
      ]
    ],
    "tagFormat": "v-${version}"
  }
}
